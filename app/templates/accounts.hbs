<header>
  <h1>Banking Accounts</h1>
</header>

<table class="content-table accounts">
  <thead>
    <tr>
      <th>Account</th>
      <th>Balance</th>
    </tr>
  </thead>
  <tbody>
    {{#each account in sorted}}
      {{#link-to "account.transactions" account tagName="tr"}}
        <td class="account-info">
          <div class="label">
            {{unbound account.label}}
          </div>
          <div class="details">
            <span class="type">
              {{unbound account.description}}
            </span>
            <span class="currency">
              {{unbound account.currency}}
            </span>
            <span class="updated-at">
              Updated {{rel-time time=account.updatedAt}}
            </span>
          </div>
        </td>
        <td class="account-balance">
          {{fmt-dollars cents=account.balanceInCents}}
        </td>
      {{/link-to}}
    {{/each}}
  </tbody>
</table>
